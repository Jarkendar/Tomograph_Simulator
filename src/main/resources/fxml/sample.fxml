<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.161"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints/>
   </rowConstraints>
   <AnchorPane prefHeight="600.0" prefWidth="900.0">
      <ImageView fx:id="inputImage" fitHeight="278.0" fitWidth="278.0" layoutX="14.0" layoutY="14.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <ImageView fx:id="sinogramImage" fitHeight="278.0" fitWidth="278.0" layoutX="314.0" layoutY="14.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <ImageView fx:id="outputImage" fitHeight="278.0" fitWidth="278.0" layoutX="14.0" layoutY="314.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <ImageView fx:id="stepImage" fitHeight="278.0" fitWidth="278.0" layoutX="314.0" layoutY="314.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <Button fx:id="chooseFileButton" layoutX="614.0" layoutY="14.0" mnemonicParsing="false" prefHeight="26.0"
              prefWidth="278.0" text="Choose file"/>
      <Label layoutX="614.0" layoutY="54.0" text="Detectors number: "/>
      <TextField fx:id="detectorNumberTextField" layoutX="800.0" layoutY="54.0" prefHeight="26.0" prefWidth="92.0"/>
      <Label layoutX="614.0" layoutY="94.0" text="Degrees range: "/>
      <TextField fx:id="degreesRangeTextField" layoutX="800.0" layoutY="94.0" prefHeight="26.0" prefWidth="92.0"/>
      <Label layoutX="614.0" layoutY="134.0" text="Measures number: "/>
      <TextField fx:id="measureNumberTextField" layoutX="800.0" layoutY="134.0" prefHeight="26.0" prefWidth="92.0"/>
      <Slider fx:id="stepSlider" layoutX="614.0" layoutY="314.0" orientation="VERTICAL" prefHeight="278.0" max="360" showTickLabels="true" showTickMarks="true"/>
   </AnchorPane>
</GridPane>
